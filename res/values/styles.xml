<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- 开关按钮 - 任务列表项 -->
	<style name="toggle_taskListItem" parent="@style/base_layout_wrap_wrap">
        <item name="android:layout_marginLeft">@dimen/comm_buttonMargin</item>
        <item name="android:layout_marginRight">@dimen/comm_buttonMargin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusable">false</item>
	</style>
	
	<!-- 文字 - 任务列表项 - 触发时间 -->
	<style name="text_taskListItem_triggerTime" parent="@style/base_layout_wrap_wrap">
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">@dimen/textSize_taskListItem_triggerTime</item>
        <item name="android:singleLine">true</item>
	</style>
	
	<!-- 文字 - 任务列表项 - 名字 -->
	<style name="text_taskListItem_name" parent="@style/base_layout_weight_wrap">
        <item name="android:textColor">@color/base_gray</item>
        <item name="android:textSize">@dimen/textSize_taskListItem_name</item>
        <item name="android:singleLine">true</item>
	</style>
	
	<!-- 文字 - 任务列表项 - 重复 -->
	<style name="text_taskListItem_repeat" parent="@style/comm_text_listItem_hint">
	</style>
	
	<!-- 文字 - 任务列表项 - 剩余时间 -->
	<style name="text_taskListItem_nextExecuteTime" parent="@style/comm_text_listItem_hint">
	</style>
	
	<!-- 文字 - 任务列表项 - 任务信息 -->
	<style name="text_taskListItem_taskInfo" parent="@style/comm_text_listItem_hint">
	    <item name="android:singleLine">true</item>
	</style>
	
	<!-- 文本编辑框 - 任务编辑短信 - 电话号码 -->
	<style name="edit_taskEditMessage_phoneNumber" parent="@style/base_layout_weight_wrap">
        <item name="android:inputType">phone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
	</style>
	
	<!-- 文本编辑框 - 任务编辑短信 - 短信内容 -->
	<style name="edit_taskEditMessage_messageContent" parent="@style/base_layout_weight_wrap">
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">3000</item>
	</style>
	
	<!-- 布局 - 自定义 -->
	<style name="layout_custom" parent="@style/base_layout_fill_wrap">
	    <item name="android:padding">@dimen/layoutPadding_taskEditCustomName</item>
	    <item name="android:gravity">center</item>
	</style>
    
	<!-- 布局 - 任务编辑音量设置项 - 单一面板 -->
	<style name="layout_taskEditVolume_panel" parent="@style/base_layout_fill_wrap_vertical">
	</style>
    
	<!-- 文字 - 任务编辑音量设置项 -->
	<style name="text_taskEditVolume" parent="@style/base_layout_fill_wrap">
   		<item name="android:layout_margin">@dimen/layoutMargin_taskEditVolumeItem</item>
	</style>
    
	<!-- 拖动条 - 任务编辑音量设置项 -->
	<style name="seekBar_taskEditVolume" parent="@style/base_layout_fill_wrap">
   		<item name="android:layout_margin">@dimen/layoutMargin_taskEditVolumeItem</item>
	</style>
	
	<!-- 布局 - 任务编辑应用程序项 -->
	<style name="layout_taskEditApplicationItem" parent="@style/base_layout_fill_fill">
	    <item name="android:padding">@dimen/layoutPadding_taskEditApplicationItem</item>
	</style>
	
	<!-- 图片 - 任务编辑应用程序项 - 图标 -->
	<style name="image_taskEditApplicationItem_icon" parent="@style/base_layout_wrap_wrap">
	    <item name="android:layout_marginRight">@dimen/imageMargin_taskEditApplicationItem_icon</item>
	</style>
	
	<!-- 文字 - 任务编辑应用程序项 - 名字 -->
	<style name="text_taskEditApplicationItem_name" parent="@style/base_layout_fill_wrap">
	    <item name="android:textColor">@color/base_white</item>
	    <item name="android:textSize">@dimen/textSize_taskEditApplicationItem_name</item>
	    <item name="android:layout_margin">1dp</item>
	</style>
	
	<!-- 文字 - 任务编辑应用程序项 - 名包 -->
	<style name="text_taskEditApplicationItem_packageName" parent="@style/base_layout_fill_wrap">
	    <item name="android:textColor">@color/base_gray</item>
	    <item name="android:layout_margin">1dp</item>
	</style>
</resources>